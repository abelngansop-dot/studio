rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for auth logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }
    
    function isSuperAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'superadmin';
    }
    
    // USERS
    // Admins and Super Admins can read all user data.
    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin() || isSuperAdmin();
      allow list: if isAdmin() || isSuperAdmin();
    }

    // BOOKINGS
    // Any signed-in user can create a booking for themselves.
    // Admins and Super Admins can read and manage all bookings.
    // Users can read their own bookings.
    match /bookings/{bookingId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin() || isSuperAdmin() || (isOwner(resource.data.userId));
      allow list: if isAdmin() || isSuperAdmin();
      allow update, delete: if isAdmin() || isSuperAdmin();
    }

    // SERVICES
    // Publicly readable by anyone.
    // Writable only by Admins and Super Admins.
    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin() || isSuperAdmin();
    }
  }
}