rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for auth logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && (getUserRole(request.auth.uid) == 'admin' || getUserRole(request.auth.uid) == 'superadmin');
    }
    
    function isSuperAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'superadmin';
    }
    
    // USERS
    // Defines the security rules for the users collection.
    match /users/{userId} {
      // READ: Any user can read their own profile. Admins and Super Admins can read any profile.
      allow read: if isOwner(userId) || isAdmin() || isSuperAdmin();
      
      // CREATE: A user can create their own profile, but they can ONLY assign the 'client' role to themselves.
      // This prevents a user from creating an account with elevated privileges.
      allow create: if isOwner(userId) && request.resource.data.role == 'client';

      // UPDATE: A user can update their own profile, but crucially, they CANNOT change their own role.
      // Only Admins or Super Admins are allowed to change a user's role.
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin() || isSuperAdmin();

      // DELETE: Only Super Admins can delete user accounts.
      allow delete: if isSuperAdmin();
      
      // LIST: Only Admins and Super Admins can list all users.
      allow list: if isAdmin() || isSuperAdmin();
    }


    // BOOKINGS
    // Any signed-in user can create a booking for themselves.
    match /bookings/{bookingId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // READ (GET/LIST): Admins/SuperAdmins can read any booking. Users can read their own bookings.
      // This combined rule is necessary for both the user-facing "Mes RÃ©servations" page
      // and the admin panel to function correctly.
      allow read: if (isAdmin() || isSuperAdmin()) || isOwner(resource.data.userId);

      // Admins and Super Admins can still update and delete all bookings.
      allow update, delete: if isAdmin() || isSuperAdmin();
    }

    // SERVICES
    // Publicly readable by anyone.
    // Writable only by Admins and Super Admins.
    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin() || isSuperAdmin();
    }
  }
}
