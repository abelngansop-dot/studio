rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for auth logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // This function performs a document read and CANNOT be used in rules for 'list' queries.
    // It remains useful for 'get', 'create', 'update', 'delete' rules.
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // These helpers are now only safe for non-list operations.
    function isAdmin() {
      return isSignedIn() && (getUserRole(request.auth.uid) == 'admin' || getUserRole(request.auth.uid) == 'superadmin');
    }
    
    function isSuperAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'superadmin';
    }

    // This function identifies the superadmin by their email address.
    // This is valid for 'list' queries as it does not read a document.
    function isTheSuperAdmin() {
      return isSignedIn() && request.auth.token.email == 'abelnono1994@gmail.com';
    }
    
    // USERS
    // Defines the security rules for the users collection.
    match /users/{userId} {
      // READ: A user can get their own profile. An admin can get any profile.
      // This rule uses isAdmin, which is fine for 'get' because it's on a single document.
      allow get: if isOwner(userId) || isAdmin() || isSuperAdmin();
      
      // LIST: ONLY the designated superadmin can list all users.
      // This rule is now valid because isTheSuperAdmin() does not use get().
      allow list: if isTheSuperAdmin();

      // CREATE: A user can create their own profile with the 'client' role.
      // The designated superadmin can create their own profile with the 'superadmin' role.
      // This prevents a user from creating an account with elevated privileges.
      allow create: if isOwner(userId) && 
                    (request.resource.data.role == 'client' || 
                    (request.auth.token.email == 'abelnono1994@gmail.com' && request.resource.data.role == 'superadmin'));

      // UPDATE: A user can update their own profile, but crucially, they CANNOT change their own role.
      // Only Admins or Super Admins are allowed to change a user's role.
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin() || isSuperAdmin();

      // DELETE: Users can delete their own accounts. Super Admins can also delete any user account.
      allow delete: if isOwner(userId) || isSuperAdmin();
    }


    // BOOKINGS
    // Any signed-in user can create a booking for themselves.
    match /bookings/{bookingId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // GET: Admins/SuperAdmins can read any single booking. Users can read their own single booking.
      allow get: if isOwner(resource.data.userId) || isAdmin() || isSuperAdmin();

      // LIST: The superadmin can list all bookings. Regular users can only run queries filtered by their user ID.
      // This rule is now valid because it no longer uses the slow/invalid isAdmin() helper for the admin case.
      allow list: if isTheSuperAdmin() || (isSignedIn() && request.query.userId == request.auth.uid);

      // Admins and Super Admins can still update and delete all bookings.
      allow update, delete: if isAdmin() || isSuperAdmin();
    }

    // SERVICES & EVENT TYPES
    // Publicly readable by anyone.
    // Writable only by Admins and Super Admins.
    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin() || isSuperAdmin();
    }
    match /eventTypes/{eventTypeId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin() || isSuperAdmin();
    }

    // REVIEWS
    // Security rules for the user reviews collection.
    match /reviews/{reviewId} {
      // READ: Anyone can read approved reviews. Admins can read all reviews.
      allow get: if resource.data.status == 'approved' || isAdmin() || isSuperAdmin();
      
      // LIST: The superadmin can list all reviews. Public users can only list approved reviews.
      // This rule is now valid and performant.
      allow list: if isTheSuperAdmin() || request.query.status == 'approved';

      // CREATE: Any signed-in user can create a review for themselves.
      // The review must be for the user creating it.
      // The initial status must be 'pending'.
      allow create: if isSignedIn() 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.status == 'pending';

      // UPDATE, DELETE: Only Admins and Super Admins can update (e.g., approve) or delete reviews.
      allow update, delete: if isAdmin() || isSuperAdmin();
    }
  }
}
