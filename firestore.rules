rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for auth logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && (getUserRole(request.auth.uid) == 'admin' || getUserRole(request.auth.uid) == 'superadmin');
    }
    
    function isSuperAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'superadmin';
    }
    
    // USERS
    // Defines the security rules for the users collection.
    match /users/{userId} {
      // READ: Any user can read their own profile. Admins and Super Admins can read any profile.
      allow read: if isOwner(userId) || isAdmin() || isSuperAdmin();
      
      // CREATE: A user can create their own profile, but they can ONLY assign the 'client' role to themselves.
      // This prevents a user from creating an account with elevated privileges.
      allow create: if isOwner(userId) && request.resource.data.role == 'client';

      // UPDATE: A user can update their own profile, but crucially, they CANNOT change their own role.
      // Only Admins or Super Admins are allowed to change a user's role.
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin() || isSuperAdmin();

      // DELETE: Users can delete their own accounts. Super Admins can also delete any user account.
      allow delete: if isOwner(userId) || isSuperAdmin();
      
      // LIST: Only Admins and Super Admins can list all users.
      allow list: if isAdmin() || isSuperAdmin();
    }


    // BOOKINGS
    // Any signed-in user can create a booking for themselves.
    match /bookings/{bookingId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // GET: Admins/SuperAdmins can read any single booking. Users can read their own single booking.
      allow get: if isOwner(resource.data.userId) || isAdmin() || isSuperAdmin();

      // LIST: Admins/SuperAdmins can list all bookings. Regular users can only run queries filtered by their user ID.
      allow list: if (isAdmin() || isSuperAdmin()) || (isSignedIn() && request.query.userId == request.auth.uid);

      // Admins and Super Admins can still update and delete all bookings.
      allow update, delete: if isAdmin() || isSuperAdmin();
    }

    // SERVICES
    // Publicly readable by anyone.
    // Writable only by Admins and Super Admins.
    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin() || isSuperAdmin();
    }

    // REVIEWS
    // Security rules for the user reviews collection.
    match /reviews/{reviewId} {
      // READ: Anyone can read approved reviews. Admins can read all reviews.
      allow read: if resource.data.status == 'approved' || isAdmin() || isSuperAdmin();
      
      // CREATE: Any signed-in user can create a review for themselves.
      // The review must be for the user creating it.
      // The initial status must be 'pending'.
      allow create: if isSignedIn() 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.status == 'pending';

      // UPDATE, DELETE: Only Admins and Super Admins can update (e.g., approve) or delete reviews.
      allow update, delete: if isAdmin() || isSuperAdmin();
      
      // LIST: Only Admins can list all reviews. Public users can list approved reviews.
      allow list: if (isAdmin() || isSuperAdmin()) || request.query.status == 'approved';
    }
  }
}
