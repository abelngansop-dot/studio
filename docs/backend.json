{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Inoublevents application.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier from Firebase Auth."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The display name of the user."
        },
        "phone": {
          "type": "string",
          "description": "The user's phone number."
        },
        "gender": {
          "type": "string",
          "description": "The gender of the user.",
          "enum": ["homme", "femme"]
        },
        "role": {
          "type": "string",
          "description": "The role of the user (e.g., client, admin, superadmin).",
          "enum": ["client", "admin", "superadmin"]
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time the user was created.",
          "format": "date-time"
        }
      },
      "required": ["uid", "email", "role", "createdAt"]
    },
    "Booking": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Booking",
      "type": "object",
      "description": "Represents a booking request made by a user for event services.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Booking entity."
        },
        "userId": {
          "type": "string",
          "description": "Reference to the User who made the booking."
        },
        "eventType": {
          "type": "string",
          "description": "The type of event."
        },
        "services": {
          "type": "array",
          "description": "A list of requested service IDs.",
          "items": { "type": "string" }
        },
        "country": {
          "type": "string",
          "description": "The country of the event."
        },
        "city": {
          "type": "string",
          "description": "The city of the event."
        },
        "date": {
          "type": "string",
          "description": "The date of the event.",
          "format": "date-time"
        },
        "contactInfo": {
          "type": "object",
          "properties": {
            "email": { "type": "string" },
            "phone": { "type": "string" }
          },
          "required": ["email", "phone"]
        },
        "status": {
          "type": "string",
          "description": "The status of the booking (e.g., pending, confirmed, cancelled).",
          "enum": ["pending", "confirmed", "cancelled"]
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time the booking was created.",
          "format": "date-time"
        },
        "requestDetails": {
          "type": "string",
          "description": "Specific details for an 'other' type event request."
        }
      },
      "required": ["userId", "eventType", "services", "country", "city", "date", "status", "createdAt"]
    },
    "Service": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Service",
      "type": "object",
      "description": "Represents a service offered for events, such as photography or catering.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "icon": { "type": "string" },
        "rating": { "type": "number" },
        "imageUrl": {
          "type": "string",
          "description": "URL for an image representing the service.",
          "format": "uri"
        }
      },
      "required": ["name", "description", "icon"]
    },
    "EventType": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "EventType",
      "type": "object",
      "description": "Represents a type of event that can be booked.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "icon": { "type": "string" },
        "imageUrl": {
          "type": "string",
          "description": "URL for an image representing the event type.",
          "format": "uri"
        }
      },
      "required": ["name", "icon"]
    },
    "Review": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Review",
        "type": "object",
        "description": "Represents a review submitted by a user.",
        "properties": {
            "userId": { "type": "string" },
            "displayName": { "type": "string" },
            "rating": { "type": "number" },
            "comment": { "type": "string" },
            "status": { "enum": ["pending", "approved", "rejected"] },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "displayName", "rating", "comment", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/entities/User" },
          "description": "Stores user profiles and roles."
        }
      },
      {
        "path": "/bookings/{bookingId}",
        "definition": {
          "entityName": "Booking",
          "schema": { "$ref": "#/entities/Booking" },
          "description": "Stores all booking requests."
        }
      },
      {
        "path": "/services/{serviceId}",
        "definition": {
          "entityName": "Service",
          "schema": { "$ref": "#/entities/Service" },
          "description": "Stores all available services and their details."
        }
      },
      {
        "path": "/eventTypes/{eventTypeId}",
        "definition": {
          "entityName": "EventType",
          "schema": { "$ref": "#/entities/EventType" },
          "description": "Stores all available event types."
        }
      },
      {
        "path": "/reviews/{reviewId}",
        "definition": {
            "entityName": "Review",
            "schema": { "$ref": "#/entities/Review" },
            "description": "Stores user reviews for moderation and display."
        }
      }
    ]
  }
}
