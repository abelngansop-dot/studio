{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Inoubliable Events application.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier from Firebase Auth."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The display name of the user."
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "description": "The role of the user (e.g., client, admin, superadmin).",
          "enum": ["client", "admin", "superadmin"]
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time the user was created.",
          "format": "date-time"
        }
      },
      "required": ["uid", "email", "role", "createdAt"]
    },
    "Booking": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Booking",
      "type": "object",
      "description": "Represents a booking request made by a user for event services.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Booking entity."
        },
        "userId": {
          "type": "string",
          "description": "Reference to the User who made the booking."
        },
        "eventType": {
          "type": "string",
          "description": "The type of event."
        },
        "services": {
          "type": "array",
          "description": "A list of requested service IDs.",
          "items": { "type": "string" }
        },
        "city": {
          "type": "string",
          "description": "The city of the event."
        },
        "date": {
          "type": "string",
          "description": "The date of the event.",
          "format": "date-time"
        },
        "contactInfo": {
          "type": "object",
          "properties": {
            "email": { "type": "string" },
            "phone": { "type": "string" }
          },
          "required": ["email", "phone"]
        },
        "status": {
          "type": "string",
          "description": "The status of the booking (e.g., pending, confirmed, cancelled).",
          "enum": ["pending", "confirmed", "cancelled"]
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time the booking was created.",
          "format": "date-time"
        }
      },
      "required": ["userId", "eventType", "services", "city", "date", "status", "createdAt"]
    },
    "Service": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Service",
      "type": "object",
      "description": "Represents a service offered for events, such as photography or catering.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "icon": { "type": "string" },
        "rating": { "type": "number" },
        "media": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "enum": ["image", "video"] },
              "url": { "type": "string" }
            }
          }
        },
        "testimonials": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "eventType": { "type": "string" },
              "comment": { "type": "string" }
            }
          }
        }
      },
      "required": ["name", "description", "icon"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/entities/User" },
          "description": "Stores user profiles and roles."
        }
      },
      {
        "path": "/bookings/{bookingId}",
        "definition": {
          "entityName": "Booking",
          "schema": { "$ref": "#/entities/Booking" },
          "description": "Stores all booking requests."
        }
      },
      {
        "path": "/services/{serviceId}",
        "definition": {
          "entityName": "Service",
          "schema": { "$ref": "#/entities/Service" },
          "description": "Stores all available services and their details."
        }
      }
    ]
  }
}
